<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearanceBase">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearanceBase.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceBase.Normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearanceBase.Normal.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceBase.Normal.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceBase.Normal.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearanceBase.Normal.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearanceBase.Normal.Huge">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearanceBase.Bold.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceBase.Bold.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceBase.Bold.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearanceBase.Bold.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearanceBase.Bold.Huge">
        <item name="android:textSize">28sp</item>
    </style>

</resources>
